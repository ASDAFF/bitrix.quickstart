\pard\plain\qc\s3\f362\fs16\b\i0\lang1049
ВОЗДУШНЫЙ КОДЕКС РОССИЙСКОЙ ФЕДЕРАЦИИ\par
\pard\plain\ql\s1\f360\fs20\b0\i0\lang1049
\par
\pard\plain\qr\s1\f360\fs20\b0\i0\lang1049
Принят\par
\pard\plain\qr\s1\f360\fs20\b0\i0\lang1049
Государственной Думой\par
\pard\plain\qr\s1\f360\fs20\b0\i0\lang1049
19 февраля 1997 года\par
\pard\plain\qr\s1\f360\fs20\b0\i0\lang1049
